{
  "manifest_version": 3,
  "name": "OptiHire - AI Job Compatibility",
  "version": "1.0.0",
  "description": "AI-powered LinkedIn profile and job description compatibility analyzer",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "http://localhost:4000/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "OptiHire"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["https://*.linkedin.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}